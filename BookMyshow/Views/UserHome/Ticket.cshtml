<html>
<head>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/fontawesome-all.css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/mdb.css">
    <style>
        #image1 {
            margin-left: -15px;
            margin-top: -6px;
        }

        table {
            width: 100%;
        }

        div {
            margin-top: 5px;
        }
        /* #image2{
            margin-left: 52%;
            margin-top: 15%;
            margin-bottom: 15%;
        } */
        .container {
            height: 100%;
        }
    </style>
</head>
<body class="bg-dark mb-2">
    <a href="/UserHome/Index" class="navbar-brand " style="margin-left: 0px;margin-top: -10px;margin-bottom: -10px;margin-right:70px;">
        <img src="~/Content/Images/bb82ec2bbdc6893100ceaa08bc3fb61f.png" width="100" height="100">
        <span style="color:red" class="font-weight-bold text-uppercase mt-3 mb-4"> Movies </span><span class="font-weight-bold text-uppercase mt-3 mb-4 text-white">Ticket</span>
    </a>
    <h4 style="color: aliceblue;margin-left: 420px;">
        Ticket :</h1>
        <div class="container bg-light " style="width: 500px;">
            <table>
                <div class="row">
                    <div class="col-md-10">
                        <tr>
                            <img src="data:image;base64,@System.Convert.ToBase64String(ViewBag.poster)" width="500px" height="300px" style="overflow: hidden;" id="image1">

                        </tr>
                    </div>
                    <div class="col-md-10">
                        <tr><h2 style="font: bold;font-size: 40px"><i class="fa fa-play px-1"></i>@ViewBag.name</h2></tr>
                    </div>
                    <div class="col-md-10 ">

                        <tr>
                            <td>Date</td>
                            <td>Time</td>
                        </tr>
                        <tr>
                            <td><h3>10/05/96</h3></td>
                            <td><h3>12:30</h3></td>
                        </tr>

                    </div>
                    <div class="col-md-10">
                        <tr>
                            <td>Cinema</td>
                            <td>Seats</td>
                        </tr>
                        <tr>
                            <td width="20px"><h3>@ViewBag.thname</h3></td>

                            @foreach(var item in @ViewBag.seats)
                            {
                                <td width="20px">
                                    @item
                                </td>
                            }

                        </tr>
                    </div>

                </div>
            </table>
        </div>



        <script src="~/Content/bootstrap/js/fontawesome-all.js"></script>
        <script src="~/Content/bootstrap/js/jquery-3.2.1.min.js"></script>
        <script src="~/Content/bootstrap/js/popper.min.js"></script>
        <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/bootstrap/js/mdb.min.js"></script>
</body>
</html>