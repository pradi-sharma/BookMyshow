@model IEnumerable<BookMyshow.Models.Movy>

<html>
<head>
    <style>
        #div1 {
            background-image: url(../../Content/Images/download.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            color: white;
            padding: 5px;
            border-radius: 20px;
            width: 100%;
          
        }
    </style>
</head>
<body>

    <div id="div1">
        <table class="table text-white table-bordered table-hover font-weight-bold" style="border-radius:5px;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MovieName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Synopsis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.IntrestedUsers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VideoLink)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cast.ActorName)
                </th>
                
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Synopsis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IntrestedUsers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VideoLink)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cast.ActorName)
                    </td>

                </tr>
            }

        </table>
    </div>
</body>
</html>